{
  "name": "notes",
  "version": "0.3.0",
  "description": "Web app that give the ability to note draggable notes to topics on boards",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --config webpack.dev.js",
    "flow:check": "flow check",
    "test": "jest",
    "test:watch": "jest --watch",
    "transpile": "babel ./src --out-dir ./js --source-maps --ignore test.js",
    "transpile:all": "babel ./src --out-dir ./js --source-maps",
    "lint": "eslint -c .eslintrc-build.js ./src > lint.txt",
    "css:min": "node css-min.js",
    "css:sass": "node css-sass.js",
    "css:all": "npm run css:sass && npm run css:min",
    "build:prod": "webpack --color --progress --config webpack.prod.js"
  },
  "author": "Yevhenii Molodyi",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@babel/runtime": "^7.17.2",
    "@reduxjs/toolkit": "^1.6.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-flow": "^7.16.7",
    "@babel/preset-react": "^7.16.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.4",
    "babel-loader": "^8.2.3",
    "clean-css": "^5.2.4",
    "eslint": "^8.8.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "flow-bin": "^0.171.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "react-refresh": "^0.11.0",
    "sass": "^1.49.7",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/js/utils/",
      "<rootDir>/js/flux/",
      "<rootDir>/js/component/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/js/utils/",
      "<rootDir>/js/flux/",
      "<rootDir>/js/component/"
    ]
  }
}
